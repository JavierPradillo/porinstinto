= simple_form_for @member, :html=> { id: 'form' } do |f|
  .form-group
    = f.label "Nombre del miembro:"
    %br
    = f.input :name, label: false
  .form-group
    = f.label "Instrumentos:"
    %br
    = f.input :instrument, label: false
  .form-group
    = f.label "Imagen:"
    %br
    = f.file_field :photo, label: false
  = f.button :submit