= render partial: 'layouts/navbar2'

#photos.container
  %br
  = bootstrap_flash
  %h2
    ="fotos"
    .pull-right= link_to fa_icon("plus-circle"), new_photo_category_path, :class => "btn btn-success" if current_user.try(:admin?) 
  %br 

  .row
    - @photo_categories.each do |category|
      .col-md-4
        .video_box
          %h3= link_to category.title, photo_category_path(category)
          = link_to image_tag(category.photo.url(:cover)), photo_category_path(category)