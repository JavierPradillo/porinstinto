= render partial: 'record_left_sidebar'
.grid_8
  %article.post
    - if current_admin.present?
      .right 
        = link_to "Editar", edit_record_path(@record), :class => "button blue" 
        = link_to "Borrar", @record, :confirm => '¿Estás seguro?', :method => :delete, :class => "button red"
        = link_to "Log out", destroy_admin_session_path, :confirm => '¿Estás seguro?', :method => :delete, :class => "button black"
    %h2= @record.name 

    %p= @record.description

    .center
      - if @record.download_link.present?
        = link_to image_tag("descarga.png", size: "160x69"), @record.download_link, target: "_blank", :class => 'frame'
      - if @record.youtube_link.present?
        = link_to image_tag("youtube.png", size: "160x69"), @record.youtube_link, target: "_blank", :class => 'frame'
      - if @record.spotify_link.present?
        = link_to image_tag("spotify.png", size: "160x69"), @record.spotify_link, target: "_blank", :class => 'frame'    

  .separator
  = render partial: 'lyrics' if @songs.present? || current_admin.present?