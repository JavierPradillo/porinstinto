= simple_form_for @record, :html=> { id: 'form' } do |f|
  .form-inputs
    .well
      .row
        .col-md-6= f.input :name, required: true
        .col-md-6= f.input :publish_date, as: :date_picker, required: true
      %br
      .row
        .col-md-6= f.input :photo, as: :file
        .col-md-6= f.input :own, as: :select
      %br
      .row
        .col-md-12= f.input :description, required: true
    .well
      .row
        .col-md-6= f.input :download_link
      %br
      .row
        .col-md-6= f.input :youtube_link
      %br
      .row
        .col-md-6= f.input :spotify_link
      %br
      .row
        .col-md-6= f.input :shop_link
  %br
  .form-actions.row
    .col-md-4= f.button :submit