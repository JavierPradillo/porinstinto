= simple_form_for @record, :html=> { id: 'form' } do |f|
  .form-inputs
    .row
      .col-md-4= f.input :name, required: true
      .col-md-4= f.input :publish_date, as: :date_picker, required: true
      .col-md-4= f.file_field :photo
    %br
    .row
      .col-md-4= f.input :own
      .col-md-8= f.input :description, required: true
    %br
    .row
      .col-md-12= f.input :download_link
    %br
    .row
      .col-md-12= f.input :youtube_link
    %br
    .row
      .col-md-12= f.input :spotify_link
    %br
    .row
      .col-md-12= f.input :shop_link
  %br
  .form-actions.row
    .col-md-4= f.button :submit