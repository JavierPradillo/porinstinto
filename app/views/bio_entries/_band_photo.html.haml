- if @band_photo.present?
  - if current_user.try(:admin?)
    = link_to fa_icon("trash"), @band_photo, :confirm => '¿Estás seguro?', :method => :delete, :class => "btn btn-danger"

  .text-center  
    %a{"data-lightbox" => "Por Instinto", :href => @band_photo.photo.url, "data-title" => "Por Instinto", :class => 'zoom'}
      = image_tag @band_photo.photo.url(:band)
- elsif current_user.try(:admin?)
  .pull-right= link_to fa_icon("plus-circle"), new_band_photo_path, :class => "btn btn-success"