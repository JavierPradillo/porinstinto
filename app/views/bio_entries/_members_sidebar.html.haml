.well
  %br
  .pull-right= link_to fa_icon("plus-circle"), new_member_path, :class => "btn btn-success" if current_user.try(:admin?) 
  .row.text-center
    - @members.each do |member|
      %li
        - if current_user.try(:admin?)
          .pull-right
            = link_to fa_icon("edit") , edit_member_path(member),                                 :class => "btn btn-primary" 
            = link_to fa_icon("trash"), @member, :confirm => '¿Estás seguro?', :method => :delete, :class => "btn btn-danger"
        .video_box
          %h5= member.instrument
          %h3= member.name
          = image_tag member.photo.url(:cover)          
        %hr