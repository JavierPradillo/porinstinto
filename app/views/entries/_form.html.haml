= simple_form_for @entry, :html=> { id: 'form' } do |f|
  .form-inputs
    .row
      .col-md-4= f.input :publish_date, as: :date_picker, required: true 
      .col-md-4= f.input :title, required: true
      .col-md-4= f.association :tag, required: true
    %br  
    .row  
      .col-md-12= f.input :content, required: true
    %br  
    .row 
      .col-md-12= f.input :youtube_link
    %br  
    .row 
      .col-md-12= f.input :external_link
    %br  
    .row 
      .col-md-12= f.file_field :photo
  %br
  .form-actions.row
    .col-md-4= f.button :submit